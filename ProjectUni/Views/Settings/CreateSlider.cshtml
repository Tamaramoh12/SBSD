@model ProjectUni.Models.slider

@{
    ViewBag.Title = "CreateSlider";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>CreateSlider</h2>

@using (Html.BeginForm("createSlider","settings",FormMethod.Post,htmlAttributes:new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()


    @Html.ValidationSummary(true, "", new { @class = "text-danger" })







    <div class="form-control">
        @Html.LabelFor(model => model.Text, htmlAttributes: new { @class = "control-label col-md-2" })

        @Html.EditorFor(model => model.Text, new { htmlAttributes = new { @class = "span11" } })
        @Html.ValidationMessageFor(model => model.Text, "", new { @class = "text-danger" })

    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Links, htmlAttributes: new { @class = "control-label col-md-2" })

        @Html.EditorFor(model => model.Links, new { htmlAttributes = new { @class = "span11" } })
        @Html.ValidationMessageFor(model => model.Links, "", new { @class = "text-danger" })

    </div>
    <div class="form-group">
        <input type="file" class="span11" name="file" />



    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
    
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
